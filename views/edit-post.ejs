<%- include('./header.ejs'); %>

<form id="edit-form" action="/?postId=<%= post.id %>"  method="POST">
    <h3 class="form-title">Edit post</h3>
    <input
    class="<% if(error && !post.userId) { %>invalid<% } %>"
    type="number"
    name="userId"
    value=<%= post.userId %>>
    <textarea
    class="<% if(error && !post.title) { %>invalid<% } %>"
    name="title">
    <%= post.title %>
    </textarea>
    <textarea
    class="<% if(error && !post.body) { %>invalid<% } %>"
    name="body">
    <%= post.body %>
    </textarea>
    <input type="submit"  value="Create">
</form>